@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/bundles/loginapp")
<div data-ng-app="LoginApp" data-ng-controller="LoginController"  ng-submit="Submit()" >
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-md-2 control-label"><h2>My Form</h2></label>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">User Name: </label>
            <div class="col-md-10">
                <input type="text" ng-model="LoginModel.UserName" placeholder="Input Your Name" />
            </div>      
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Password: </label>
            <div class="col-md-10">
                <input type="password" ng-model="LoginModel.Password" placeholder="Input Your Password" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="radio" name="usertype" ng-model="LoginModel.UserType"  ng-value="LoginModel.UserTypes.Admin" />  <label>Admin User</label>
                <input type="radio" name="usertype"  ng-model="LoginModel.UserType" ng-value="LoginModel.UserTypes.Guest"/>  <label>Guest User</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>
    </form>
</div>

